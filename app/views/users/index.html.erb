<div class="container">
  <h1> Listing Users </h1>
  <table class="table table-light table-hover">
    <tr>
      <th> Fname </th>
      <th> Lname </th>
      <th> Contact </th>
      <th> Email </th>
    </tr>

    <% @user.each do |user| %>
      <tr>
        <td><%= user.fname %></td>
        <td><%= user.lname %></td>
        <td><%= user.contact %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user_path(user) if can? :read, User %></td>
        <td><%= link_to 'Edit', edit_user_path(user) if can? :manage, User %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }if can? :manage,User %></td>
      </tr>
    <% end %>
  </table>

  <%= link_to 'Link to Questions', questions_path if can? :manage,Question %>
  <br />
  <%= link_to 'Link to Responses', responses_path if can? :read,Response %>
  <br />
  <%= link_to 'Link to Tests' , tests_path if can? :manage,Test %>
  <br />
  <%= link_to 'Link to Manage Roles' ,users_manage_roles_path if can? :manage,User %>
</div>
