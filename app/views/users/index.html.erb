<div class="container">
  <h1> Listing Users </h1>
  <table class="table table-light table-hover table-sm">
    <thead class="thead-dark">
    <tr>
      <th> Fname </th>
      <th> Lname </th>
      <th> Contact </th>
      <th> Email </th>
      <th colspan='3'> Actions </th>
    </tr>

    <% @user.each do |user| %>
      <tr>
        <td><%= user.fname %></td>
        <td><%= user.lname %></td>
        <td><%= user.contact %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user_path(user) if can? :read, User %></td>
        <td><%= link_to 'Edit', edit_user_path(user) if can? :manage, User %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }if can? :manage,User %></td>
      </tr>
    <% end %>
  </table>
</div>
