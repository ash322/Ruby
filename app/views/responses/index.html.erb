<div class="container">
  <h1> Listing Responses </h1>
  <table class="table table-light table-hover table-sm">
    <thead class="thead-dark">
    <tr>
      <th> TestId </th>
      <th> QuestionId </th>
      <th> Responses </th>
      <th colspan="3"> Actions </th>
    </tr>

    <% @response.each do |r| %>
      <tr>
        <td><%= r.test_id %></td>
        <td><%= r.question_id %></td>
        <td><%= r.response %></td>
        <td><%= link_to 'Show', response_path(r) %></td>
        <td><%= link_to 'Edit', edit_response_path(r) %></td>
        <td><%= link_to 'Destroy', r, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
  <br />
  <%= link_to 'New  Response', new_response_path %>
</div>
