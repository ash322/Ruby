 <!DOCTYPE html>
<html>
  <head>
    <title>Exam</title>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
      body { background-color: lightyellow; }
      table, th, td {
      border: 2px solid orange;}

      .img-circle{
        width: 50px;
        height: 50px;
        background-size: cover;
        display: block;
        border-radius: 50%;
        -webkit-border-radius: 100px;
        -moz-border-radius: 100px;
      }
      .navbar-custom {
        background-color: #9bf0d0;
      }
    </style>
  </head>

  <body>
    <nav class="navbar navbar-expand-sm navbar-custom">
      <a class="navbar-brand"><%= image_tag("logo.png",:style=>"max-width:180px;min-width:180px") %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle na#894ba5vigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link"></a> <%= link_to 'User', users_path if can? :manage,User %></a>

          <a class="nav-item nav-link active"><%= link_to ' Questions', questions_path if can? :manage,Question %> <span class="sr-only">(current)</span></a>

          <a class="nav-item nav-link"><%= link_to ' Responses', responses_path if can? :read,Response %></a>

          <a class="nav-item nav-link"><%= link_to ' Tests' , tests_path if can? :manage,Test %></a>

          <a class="nav-item nav-link"><%= link_to ' Manage Roles' ,users_manage_roles_path if can? :manage,User %></a>
        </div>
      </div>

      <div class="nav-item dropdown">
        <a class="nav-dropdown-toggle"  id="navbarDropdownMenuLink" data-toggle="dropdown">
          <%= image_tag("img.png",:class=>"img-circle") %>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
          <% if user_signed_in? %>
           <a class="dropdown-item"><%= link_to current_user.email, edit_user_registration_path %></a>
           <div class="dropdown-divider"></div>
           <a class="dropdown-item"><%= link_to "Logout", destroy_user_session_path, method: :delete %></a>
           <!-- <a href="destroy_user_session_path, method: :delete" class="dropdown-item" role="button" aria-pressed="true">Logout</a> -->
          <% else %>
           <a class="dropdown-item"><%= link_to "Sign Up", new_user_registration_path %></a>
           <a class="dropdown-item"><%= link_to "Login", new_user_session_path %></a>
          <% end %>
        </div>
      </div>
    </nav>
    <div><%= alert %></div>

    <%= yield %>
  </body>
</html>
