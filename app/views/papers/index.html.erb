
<h1> Listing Papers </h1>

<table>
  <tr>
    <th> Name </th>
  </tr>
  <% @paper.each do |p| %>
    <tr>
      <td> <%= p.name %> </td>
      <td> <%= link_to 'Show', paper_path(p) %> </td>
      <td> <%= link_to 'Edit', edit_paper_path(p) %> </td>
      <td> <%= link_to 'Destroy', p, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
    </tr>
  <% end %>
</table>
<br />
<%= link_to 'New Paper', new_paper_path %>
